
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>SuperMarket Management</title>
    @* <a href="~/lib/bootstrap/css/bootstrap.css.map">~/lib/bootstrap/css/bootstrap.css.map</a>
    <a href="~/lib/bootstrap/css/bootstrap.min.css.map">~/lib/bootstrap/css/bootstrap.min.css.map</a>
    <a href="~/lib/bootstrap/css/bootstrap.rtl.css.map">~/lib/bootstrap/css/bootstrap.rtl.css.map</a>
    <a href="~/lib/bootstrap/css/bootstrap.rtl.min.css.map">~/lib/bootstrap/css/bootstrap.rtl.min.css.map</a> *@
    <link href="~/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.rtl.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
</head>
<body>    
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarNav">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item active">
                        <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a> @* href="/home/index" *@
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Categories" asp-action="index">Categories</a> @* href="/Categories/index" *@
                    </li>                    
                </ul>
            </div>
        </nav>
    </header>
    <div class="pb-3">
        @RenderSection("title")
        <hr />
    </div>
    <div class="container">
        @RenderBody()
    </div>
</body>
@await RenderSectionAsync("Scripts",required:false)
</html>